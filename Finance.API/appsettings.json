{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DbFinance": "Host=finance.database; Port=5432; Database=FinanceDb; Username=postgres; Password=1234",
    "Cache": "finance.cache:6379"
  },

  "JWTOptions": {
    "SecretKey": "secretkeysecretkeysecretkeysecretkeysecretkey",
    "ExpiresHours": "1"
  },

  "AuthorizationsOptions": {
    "RolePermissions": [
      {
        "Role": "Admin",
        "Permission": [ "Create", "Read", "Update", "Delete" ]
      },
      {
        "Role": "User",
        "Permission": [ "Read" ]
      }
    ]
  }
}
